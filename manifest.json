{
  "manifest_version": 3,
  "name": "Screen Dimmer",
  "version": "1.2.0",
  "description": "Dim all webpages with an adjustable slider.",
  "action": { "default_popup": "popup.html", "default_title": "Screen Dimmer" },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}

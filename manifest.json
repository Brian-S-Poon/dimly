{
  "manifest_version": 3,
  "name": "Night Light (Minimal)",
  "version": "1.0.0",
  "description": "Dim the current page with a simple overlay.",
  "action": { "default_popup": "popup.html", "default_title": "Night Light" },
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://chrome.google.com/*",
        "chrome://*/*",
        "edge://*/*",
        "about:*",
        "chrome-extension://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}

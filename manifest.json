{
  "manifest_version": 3,
  "name": "Dimly — dim bright pages",
  "version": "1.3.1",
  "description": "Dim any site with a global slider or per-site brightness, plus quick lock and a theme-aware popup.",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Dimly — dim bright pages"
  },
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/shared/constants.js",
        "src/shared/math.js",
        "src/shared/storage.js",
        "src/content/overlay.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}

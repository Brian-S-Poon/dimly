{
  "manifest_version": 3,
  "name": "Night Light",
  "version": "1.1.0",
  "description": "Dim any page with an adjustable overlay. Remembers your per-site level.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": { "default_popup": "popup.html", "default_title": "Night Light" },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
